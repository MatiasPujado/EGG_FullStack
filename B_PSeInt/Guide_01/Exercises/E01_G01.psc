Algoritmo Consulta
	// Declaro variables
	Definir weather Como Caracter;
	
	// Le pedimos al usuario que responda la pregunta 
	Escribir "Como esta el dia de hoy? (soleado, nublado, lloviendo)";
	Leer weather;
	
	// Escribimos en pantalla el mensaje completo
	Escribir "El dia de hoy esta ", weather, ".";	
FinAlgoritmo
